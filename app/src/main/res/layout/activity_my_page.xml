<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/teal_200"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="마이페이지"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:hint="abcd1234"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/idText2"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:layout_marginTop="50dp"
                android:background="@color/teal_200"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="홍길동"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/nameText2"
                android:drawableStart="@drawable/ic_baseline_drive_file_rename_outline_24"
                android:drawableLeft="@drawable/ic_baseline_drive_file_rename_outline_24"
                android:layout_marginTop="10dp"
                android:background="@color/teal_200"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="2000-01-01"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/birthText2"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:layout_marginTop="10dp"
                android:background="@color/teal_200"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="남"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/gender"
                android:drawableStart="@drawable/ic_baseline_people_outline_24"
                android:drawableLeft="@drawable/ic_baseline_people_outline_24"
                android:layout_marginTop="10dp"
                android:background="@color/teal_200"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="abcd1234@naver.com"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/emailText2"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:layout_marginTop="10dp"
                android:background="@color/teal_200"/>


            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:hint="010-1234-5678"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/phoneText2"
                android:drawableStart="@drawable/ic_baseline_phone_24"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:layout_marginTop="10dp"
                android:background="@color/teal_200"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@color/teal_700"
                android:text="회원정보수정"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/registerButton"/>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>